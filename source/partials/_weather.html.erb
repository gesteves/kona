<div class="weather" data-nosnippet data-controller="live-update" data-live-update-url-value="<%= url_for('/xhr/weather.html') %>">
  <div class="weather__icon" aria-hidden="true"><%= icon_svg("classic", "thin", weather_icon) %></div>
  <div class="weather__text">
    <%= weather_summary %>
    <% weather_alerts.each do |alert| %>
      <a href="<%= alert.details_url %>" class="weather__alert" target="_blank" rel="nofollow noopener">
        <%= icon_svg "classic", "regular", "triangle-exclamation" %>
        <%= alert.description %>
      </a>
    <% end %>
  </div>
</div>
