<section class="stats stats--has-three" data-nosnippet data-controller="live-update" data-live-update-url-value="<%= url_for('/xhr/whoop.html') %>" data-action="visibilitychange@document->live-update#handleVisibilityChange" aria-labelledby="hed-whoop">
  <h3 class="stats__heading" id="hed-whoop"><%= whoop_heading %></h3>
  <%= partial 'partials/stats/stat', locals: { icon: 'snooze', top: 'Sleep', value: whoop_sleep_score, unit: '%', bottom: whoop_sleep_label, info_url: 'https://www.whoop.com/us/en/thelocker/how-well-whoop-measures-sleep/' } %>
  <%= partial 'partials/stats/stat', locals: { icon: whoop_recovery_icon, top: 'Recovery', value: whoop_recovery_score, unit: '%', bottom: whoop_recovery_label, info_url: 'https://www.whoop.com/us/en/thelocker/how-does-whoop-recovery-work-101/' } %>
  <%= partial 'partials/stats/stat', locals: { icon: 'fire-flame-curved', top: 'Strain', value: whoop_strain_score, unit: '/21', bottom: whoop_strain_label, info_url: 'https://www.whoop.com/us/en/thelocker/how-does-whoop-strain-work-101/' } %>
</section>
