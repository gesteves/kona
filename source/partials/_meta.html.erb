<meta charset="utf-8">
<% if defined?(content) %>
  <%= title_tag(content) %>
<% elsif current_page.data.title.present? %>
  <%= title_tag(current_page.data.title) %>
<% end %>
<% if defined?(content) %>
  <meta name="description" content="<%= h content_summary(content) %>">
<% elsif current_page.data.summary.present? %>
  <meta name="description" content="<%= h current_page.data.summary %>">
<% end %>
<meta name="viewport" content="width=device-width,minimum-scale=1">
<meta name="view-transition" content="same-origin">
<meta name="theme-color" content="#BF0222">
<% if hide_from_search_engines? %>
  <meta name="robots" content="noindex">
<% else %>
  <meta name="bingbot" content="noarchive">
<% end %>
