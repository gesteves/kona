<% if defined?(content) %>
  <meta property="og:title" content="<%= page_title(content) %>">
<% elsif current_page.data.title.present? %>
  <meta property="og:title" content="<%= page_title(current_page.data.title) %>">
<% end %>

<% if defined?(content) %>
  <meta property="og:description" content="<%= content_summary(content) %>">
<% elsif current_page.data.summary.present? %>
  <meta property="og:description" content="<%= current_page.data.summary %>">
<% end %>

<% if defined?(content) && content.open_graph_image.present? %>
  <meta property="og:image" content="<%= open_graph_image_url(content.open_graph_image.url) %>">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="<%= content.open_graph_image.description %>">
<% elsif defined(content) && first_image_url(markdown_to_html(content.body)).present? %>
  <meta property="og:image" content="<%= first_image_url(markdown_to_html(content.body)) %>">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="<%= get_asset_description(get_asset_id(first_image_url(markdown_to_html(content.body)))) %>">
<% elsif data.site.open_graph_image.present? %>
  <meta property="og:image" content="<%= cdn_image_url(data.site.open_graph_image.url) %>">
  <meta property="og:image:width" content="<%= data.site.open_graph_image.width %>">
  <meta property="og:image:height" content="<%= data.site.open_graph_image.height %>">
  <meta property="og:image:alt" content="<%= data.site.open_graph_image.description %>">
<% end %>

<meta property="og:url" content="<%= full_url(current_page.url) %>">
<% if defined?(content) && content.entry_type == 'Article' %>
  <meta property="og:type" content="Article">
<% else %>
  <meta property="og:type" content="Website">
<% end %>

<meta property="og:site_name" content="<%= data.site.title %>">
<meta property="og:locale" content="en_US">
