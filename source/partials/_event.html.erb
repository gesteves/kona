<article class="entry entry--summary event" id="event-<%= event.sys.id.parameterize %>" aria-labelledby="hed-<%= event.sys.id.parameterize %>">
  <header class="entry__header">
    <p class="entry__meta">
      <%= event_tracking_tag(event) %>
      <%= event_timestamp_tag(event) %>
      <span><%= icon_svg("classic", "light", "location-dot") %> <%= event.location %></span>
    </p>
    <h4 class="entry__hed" id="hed-<%= event.sys.id.parameterize %>">
      <% if event.url.present? %>
        <%= link_to smartypants(event.title), event.url, rel: "noopener", target: "_blank" %>
      <% else %>
        <%= smartypants(event.title) %>
      <% end %>
    </h4>
  </header>
  <% if event.description.present? %>
    <div class="entry__body">
      <%= render_body(event.description) %>
    </div>
  <% end %>
  <% if has_weather_data?(event) %>
    <%= partial 'partials/event_weather', locals: { event: event } %>
  <% end %>
</article>
