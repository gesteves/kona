<article class="entry entry--full entry--article" id="entry-<%= article.sys.id.parameterize %>" aria-labelledby="hed-<%= article.sys.id.parameterize %>" data-trending-score="<%= trending_score(article) %>" data-recency-score="<%= recency_score(article) %>">
  <header class="entry__header">
    <%= partial 'partials/article/meta', locals: { article: article } %>
    <h2 class="entry__hed" id="hed-<%= article.sys.id.parameterize %>">
      <%= smartypants(article.title) %>
    </h2>
    <p class="entry__meta">
      <span><%= icon_svg("classic", "light", "stopwatch") %> <%= reading_time(article) %></span>
      <% if plausible_url(article).present? %>
        <span><%= icon_svg("classic", "light", "eye") %> <%= link_to article_views(article), plausible_url(article), rel: "noopener noreferrer nofollow", target: "_blank" %></span>
      <% end %>
    </p>
  </header>
  <div class="entry__body">
    <%= render_body(article.intro, image_variant: :full) %>
    <%= render_body(article.body, image_variant: :full) %>
    <%= partial 'partials/disclosure', locals: { entry: article } %>
  </div>
</article>
