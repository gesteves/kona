<% if items.present? %>
  <nav class="nav" id="nav">
    <ol class="nav__list">
    <% items.each do |i| %>
      <li class="nav__item">
        <% if i.destination.end_with?('.xml') %>
          <%= link_to i.title, i.destination, "data-controller": "clipboard", "data-action": "click->clipboard#preventDefault" %>
        <% elsif i.open_in_new_tab %>
          <%= link_to i.title, i.destination, rel: "noopener", target: "_blank" %>
        <% else %>
          <%= link_to i.title, i.destination %>
        <% end %>
      </li>
    <% end %>
    </ol>
  </nav>
<% end %>
