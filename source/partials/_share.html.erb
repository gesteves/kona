<div class="share" id="social-sharing">
  <h3 class="share__heading">Share This <%= entry_type(article) %></h3>

  <div class="share__buttons">
      <button aria-label="Open sharing options" title="Open sharing options" class="share__button --is-hidden" data-controller="share" data-share-text-value="<%= sanitize(article.title) %>" data-share-url-value="<%= full_url(article.path) %>" data-share-is-native-value="true" data-share-via-value="Native" data-action="click->share#openShareSheet" data-share-hidden-class="--is-hidden">
        <%= icon_svg("classic", "solid", "arrow-up-from-bracket") %>
      </button>

      <a aria-label="Copy link to clipboard" title="Copy link to clipboard" class="share__button" href="<%= full_url(article.path) %>" data-controller="clipboard" data-clipboard-hidden-class="share__hidden" data-clipboard-success-message-value="A link to this <%= entry_type(article).downcase %> has been copied to your clipboard." data-action="click->clipboard#preventDefault">
        <span data-clipboard-target="link">
          <%= icon_svg("classic", "solid", "link") %>
        </span>
        <span data-clipboard-target="check" class="share__hidden">
          <%= icon_svg("classic", "solid", "check") %>
        </span>
      </a>

      <a aria-label="Share by email" title="Share by email" class="share__button" href="<%= mail_share_url(article) %>" rel="noopener nofollow" data-controller="share" data-share-via-value="Email" data-action="click->share#trackShare">
        <%= icon_svg("classic", "solid", "envelope") %>
      </a>

      <a aria-label="Share by text message" title="Share by text message" class="share__button" href="<%= sms_share_url(article) %>" rel="noopener nofollow" data-controller="share" data-share-via-value="SMS" data-action="click->share#trackShare">
        <%= icon_svg("classic", "solid", "comment") %>
      </a>

      <a aria-label="Share on Bluesky" title="Share on Bluesky" class="share__button" href="<%= bluesky_share_url(article) %>" rel="noopener nofollow" target="_blank" data-controller="share" data-share-via-value="Bluesky" data-action="click->share#trackShare">        
        <%= icon_svg("classic", "brands", "bluesky") %>
      </a>

      <a aria-label="Share on Facebook" title="Share on Facebook" class="share__button" data-controller="share" data-share-via-value="Facebook" data-action="click->share#openPopup" href="<%= facebook_share_url(article) %>" rel="noopener nofollow" target="_blank">
        <%= icon_svg("classic", "brands", "facebook") %>
      </a>

      <a aria-label="Share on Reddit" title="Share on Reddit" class="share__button" href="<%= reddit_share_url(article) %>" rel="noopener nofollow" target="_blank" data-controller="share" data-share-via-value="Reddit" data-action="click->share#trackShare">
        <%= icon_svg("classic", "brands", "reddit") %>
      </a>

      <a aria-label="Share on Threads" title="Share on Threads" class="share__button" href="<%= threads_share_url(article) %>" rel="noopener nofollow" target="_blank" data-controller="share" data-share-via-value="Threads" data-action="click->share#trackShare">
        <%= icon_svg("classic", "brands", "threads") %>
      </a>
  </div>
</div>
