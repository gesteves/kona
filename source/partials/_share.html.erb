<div class="share" id="social-sharing">
  <h3 class="share__heading">Share This Article</h3>

  <div class="share__buttons">
      <button aria-label="Open sharing options" title="Open sharing options" class="share__button --is-hidden" data-controller="share" data-share-text-value="<%= sanitize(article.title) %>" data-share-url-value="<%= full_url(article.path) %>" data-share-is-native-value="true" data-action="click->share#openShareSheet" data-share-hidden-class="--is-hidden">
        <%= icon_svg("classic", "solid", "arrow-up-from-bracket") %>
      </button>

      <a aria-label="Share by email" title="Share by email" class="share__button" href="<%= mail_share_url(article) %>" rel="noopener nofollow">
        <%= icon_svg("classic", "solid", "envelope") %>
      </a>

      <a aria-label="Share by text message" title="Share by text message" class="share__button" href="<%= sms_share_url(article) %>" rel="noopener nofollow">
        <%= icon_svg("classic", "solid", "comment") %>
      </a>

      <a aria-label="Share on Bluesky" title="Share on Bluesky" class="share__button" href="<%= bluesky_share_url(article) %>" rel="noopener nofollow" target="_blank">        
        <%= icon_svg("classic", "brands", "bluesky") %>
      </a>

      <a aria-label="Share on Facebook" title="Share on Facebook" class="share__button" data-controller="share" data-action="click->share#openPopup" href="<%= facebook_share_url(article) %>" rel="noopener nofollow" target="_blank">
        <%= icon_svg("classic", "brands", "facebook-f") %>
      </a>

      <a aria-label="Save to Pocket" title="Save to Pocket" class="share__button" href="<%= pocket_save_url(article) %>" rel="noopener nofollow" target="_blank">
        <%= icon_svg("classic", "brands", "get-pocket") %>
      </a>

      <a aria-label="Share on Reddit" title="Share on Reddit" class="share__button" href="<%= reddit_share_url(article) %>" rel="noopener nofollow" target="_blank">
        <%= icon_svg("classic", "brands", "reddit-alien") %>
      </a>

      <a aria-label="Share on Threads" title="Share on Threads" class="share__button" href="<%= threads_share_url(article) %>" rel="noopener nofollow" target="_blank">
        <%= icon_svg("classic", "brands", "threads") %>
      </a>
  </div>
</div>
