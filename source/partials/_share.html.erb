<div class="share">
  <h3 class="share__heading">Share This Article</h3>

  <div class="share__buttons">
      <button class="share__button --is-hidden" data-controller="share" data-share-text-value="<%= og_title(article) %>" data-share-url-value="<%= full_url(article.path, { ref: 'Share Button' }) %>" data-share-is-native-value="true" data-action="click->share#openShareSheet" data-share-hidden-class="--is-hidden">
        <%= partial "icons/solid/arrow-up-from-bracket.svg" %>
      </button>

      <a class="share__button" href="mailto:?subject=<%= ERB::Util.url_encode og_title(article) %>&body=<%= ERB::Util.url_encode full_url(article.path, { ref: 'Email' }) %>">
        <%= partial "icons/solid/envelope.svg" %>
      </a>

      <a class="share__button" href="sms:?&body=<%= ERB::Util.url_encode("#{og_title(article)} #{full_url(article.path, { ref: 'Text Message' })}")  %>">
        <%= partial "icons/solid/comment.svg" %>
      </a>

      <a class="share__button" data-controller="share" data-action="click->share#openPopup" href="https://www.facebook.com/sharer/sharer.php?u=<%= ERB::Util.url_encode full_url(article.path, { ref: 'Facebook' }) %>" rel="noopener nofollow" target="_blank">
        <%= partial "icons/brands/facebook-f.svg" %>
      </a>

      <a class="share__button" href="https://reddit.com/submit?title=<%= ERB::Util.url_encode og_title(article) %>&url=<%= ERB::Util.url_encode full_url(article.path, { ref: 'Reddit' }) %>" rel="noopener nofollow" target="_blank">
        <%= partial "icons/brands/reddit-alien.svg" %>
      </a>
  </div>
</div>
