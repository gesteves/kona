<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= full_url('index.html') %></loc>
  </url>
  <% data.pages.reject { |a| a.draft || !a.indexInSearchEngines }.each do |page| %>
    <url>
      <loc><%= full_url(page.path) %></loc>
      <lastmod><%= DateTime.parse(page.updated_at).strftime('%Y-%m-%d') %></lastmod>
    </url>
  <% end %>
  <% data.articles.reject { |a| a.draft || !a.indexInSearchEngines }.each do |article| %>
    <url>
      <loc><%= full_url(article.path) %></loc>
      <lastmod><%= DateTime.parse(article.updated_at).strftime('%Y-%m-%d') %></lastmod>
    </url>
  <% end %>
</urlset>
